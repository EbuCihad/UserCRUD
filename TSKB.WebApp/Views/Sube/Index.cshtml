@using TSKB.Entities
@using TSKB.BusinessLayer
@model Sube
@{
    SubeManager km = new SubeManager();
    List<Sube> list = km.GetSubes();
    ViewBag.Title = "Index";
}



<table class="table">
    <thead>
        @if (ViewBag.dolu.ToString() == "1")
        {

            <tr>
                <th scope="col"style="text-align:center;color:red">SİLME İŞLEMİ BAŞARISIZ, ÖNCE ŞUBENİN DEPARTMAN, EKİP VE ÇALIŞANLARINI SİLMELİSİNİZ</th>
            </tr>
        }
        <tr>
            <th scope="col">ŞUBE İSİM</th>
            <th>
                <a href="/Sube/AddSube" class="list-group-item">YENİ ŞUBE EKLE</a>
            </th>
        </tr>
    </thead>
    <tbody>
       
          
        

        @foreach (Sube x in list)
        {
            <tr>
                <th scope="row">@x.isim</th>


                <td>
                    @Html.ActionLink("Güncelle", "UpdateSube", "Sube", new { Id = x.Id }, null) |
                    @Html.ActionLink("Sil", "DeleteSube", "Sube", new { Id = x.Id }, null)

                </td>
            </tr>
        }
    </tbody>
</table>